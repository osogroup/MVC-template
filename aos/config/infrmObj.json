{
    "infrm":{
        "docId":{
            "required":true,
            "value":"uuid",
            "autogen":true,
            "type":"string"
        },
        "id":{
            "required":true,
            "autogen":true,
            "type":"int",
            "inType":"number"
        },
        "name":{
            "required":true,
            "editable":true,
            "type":"string",
            "inType":"text"
        },
        "type":{
            "required":true,
            "type":"string",
            "opts":"infrmTypes",
            "inType":"select"
        },
        "sprtType":{
            "type":"string",
            "editable":true,
            "opts":"infrmTypes.{type}.sprtType",
            "inType":"text"
        },
        "srvType":{
            "type":"string",
            "editable":true,
            "opts":"infrmTypes",
            "inType":"text"
        },
        "template":{
            "type":"string",
            "editable":true,
            "opts":"_template_{type}",
            "inType":"text"
        },
        "infrmStatus":{
            "type":"string",
            "editable":true,
            "opts":"infrmGen.status",
            "inType":"text"
        },
        "lastMod":{
            "required":true,
            "autogen":true,
            "type":"timestamp",
            "inType":"date"
        },
        "effUnit":{
            "type":"string",
            "autogen":true,
            "depndt":"field",
            "value":"infrmTypes.{type}.units",
            "inType":"text"
        },
        "estEff":{
            "type":"int",
            "autogen":true,
            "depndt":"calc",
            "value":"{sum(sprtInfrms['estEff'])",
            "inType":"number"
        },
        "actEff":{
            "type":"int",
            "autogen":true,
            "depndt":"calc",
            "value":"{sum(sprtInfrms['actEff'])",
            "inType":"number"
        },
        "context":{
            "type":"string",
            "editable":true,
            "inType":"textarea"
        },
        "problem":{
            "type":"string",
            "editable":true,
            "inType":"textarea"
        },
        "solution":{
            "type":"string",
            "editable":true,
            "inType":"textarea"
        },
        "design":{
            "type":"string",
            "editable":true,
            "inType":"text"
        },
        "designName":{
            "type":"string",
            "editable":true,
            "inType":"text"
        },
        "sprtInfrms":{
            "type":"object",
            "limit":"amn",
            "obj":{
                "{sprtInfrm.docId}":{
                    "docId":"{sprtInfrm.docId}",
                    "name":"{sprtInfrm.name}",
                    "effUnit":"{sprtInfrm.effUnit}",
                    "estEff":"{sprtInfrm.estEff}",
                    "actEff":"{sprtInfrm.actEff}",
                    "infrmStatus":"{sprtInfrm.infrmStatus}"
                }
            },
            "opts":"_infrm-{sprtType}",
            "editable":true,
            "depndt":"calc",
            "inType":"textarea"
        },
        "depcies":{
            "type":"object",
            "limit":"amn",
            "obj":{
                "{depInfrm.docId}":{
                    "docId":"{depInfrm.docId}",
                    "name":"{depInfrm.name}",
                    "infrmStatus":"{depInfrm.infrmStatus}"
                }
            },
            "opts":"_infrm-{srvType}",
            "editable":true,
            "depndt":"calc",
            "inType":"textarea"
        },
        "wrkflo":{
            "type":"string",
            "editable":true,
            "opts":"_wrkflos-{infrmTypes.{type}.wrkflo}",
            "inType":"text"
        },
        "wrkfloStatus":{
            "type":"string",
            "inType":"select",
            "opts":"{wrkflo.sprtWrflos}"
        },
        "owner":{
            "type":"object",
            "limit":1,
            "obj":{
                "{user.id}":{
                    "id":"{user.id}",
                    "name":"{user.name}",
                    "role":"{user.role}"
                }
            },
            "opts":"_users-{infrmTypes.{type}.owners}",
            "inType":"obj"
        },
        "team":{
            "type":"object",
            "limit":"amn",
            "obj":{
                "{user.id}":{
                    "id":"{user.id}",
                    "name":"{user.name}",
                    "role":"{user.role}"
                }
            },
            "opts":"_users-{infrmTypes.{type}.team}",
            "inType":"obj"
        },
        "timebox":{
            "type":"object",
            "limit":"amn",
            "obj":{
                "{timebox.id}":{
                    "docId":"{timebox.docId}",
                    "id":"{timebox.id}",
                    "type":"{timebox.type}",
                    "name":"{timebox.name}",
                    "startDate":"{timebox.startDate}",
                    "endDate":"{timebox.endDate}",
                    "approver":{
                        "type":"obj",
                        "obj":{
                            "{user.id}":{
                                "id":"{user.id}",
                                "name":"{user.name}",
                                "role":"{user.role}"
                            }
                        }
                    }
                }
            },
            "opts":"_timebox-{infrmTypes.{type}.timebox}",
            "inType":"obj"
        },
        "intgr":{
            "type":"object",
            "limit":1,
            "obj":{
                "{intgr.docId}":{
                    "docId":"{intgr.docId}",
                    "id":"{intgr.id}",
                    "type":"{intgr.type}",
                    "name":"{intgr.name}",
                    "descript":"{intgr.descript}"
                }
            },
            "opts":"infrmTypes.{type}.intgr",
            "inType":"obj"
        }
    },
    "infrmTypes":{
        "strategy":{
            "sprtType":["initiative","idea"],
            "wrkflo":["offering","platform","solution"],
            "timebox":["milestone"],
            "owner":[""],
            "team":[""],
            "units":"man_months",
            "intgr":["pmt"]
        },
        "initiative":{
            "sprtType":["solution"],
            "wrkflo":["framework"],
            "timebox":["milestone"],
            "owner":[""],
            "team":[""],
            "units":"man_months",
            "intgr":["pmt"]
        },
        "solution":{
            "sprtType":["asset"],
            "wrkflo":["process"],
            "timebox":["annual"],
            "owner":[""],
            "team":[""],
            "units":"man_months",
            "intgr":["pmt"]
        },
        "asset":{
            "sprtType":["none"],
            "wrkflo":["use_case"],
            "timebox":["project"],
            "owner":[""],
            "team":[""],
            "units":"man_hrs",
            "intgr":["pmt"]
        }
    },
    "infrmGen":{
        "status":["not_started","planning","active","complete","on_hold","archive"]
    }
}
