{
    "task":{
        "docId":{
            "required":true,
            "value":"uuid",
            "autogen":true,
            "type":"string"
        },
        "id":{
            "required":true,
            "autogen":true,
            "type":"int"
        },
        "name":{
            "required":true,
            "type":"string"
        },
        "type":{
            "required":true,
            "value":"task",
            "autogen":true
        },
        "status":{
            "type":"string",
            "opts":"taskGen.status"
        },
        "lastMod":{
            "required":true,
            "type":"timestamp"
        },
        "effUnit":{
            "type":"string",
            "autogen":true,
            "value":"infrmTypes.{type}.units"
        },
        "estEff":{
            "type":"int",
            "autogen":true,
            "value":"{sum(sprtInfrms['estEff'])"
        },
        "actEff":{
            "type":"int",
            "autogen":true,
            "value":"{sum(sprtInfrms['actEff'])"
        },
        "sprtTasks":{
            "type":"object",
            "limit":"amn",
            "obj":{
                "{sprtInfrm.docId}":{
                    "docId":"{sprtInfrm.docId}",
                    "name":"{sprtInfrm.name}",
                    "effUnit":"{sprtInfrm.effUnit}",
                    "estEff":"{sprtInfrm.estEff}",
                    "actEff":"{sprtInfrm.actEff}",
                    "infrmStatus":"{sprtInfrm.infrmStatus}"
                }
            },
            "opts":"_infrm-{sprtType}"
        },
        "owner":{
            "type":"object",
            "limit":1,
            "obj":{
                "{user.id}":{
                    "id":"{user.id}",
                    "name":"{user.name}",
                    "role":"{user.role}"
                }
            },
            "opts":"_users"
        },
        "timebox":{
            "type":"array",
            "opts":"_timebox"
        }
    },
    "taskGen":{
        "status":["not_started","in-progress","completed"]
    }
}
