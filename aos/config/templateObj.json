{
    "template":{
        "docId":{
            "required":true,
            "value":"uuid",
            "autogen":true,
            "type":"string"
        },
        "id":{
            "required":true,
            "autogen":true,
            "type":"int"
        },
        "name":{
            "required":true,
            "editable":true,
            "type":"string",
            "inType":"text"
        },
        "type":{
            "required":true,
            "editable":true,
            "type":"string",
            "inType":"text",
            "opts":"tempTypes"
        },
        "sprtType":{
            "required":true,
            "opts":"tempTypes.{type}.sprtType",
            "editable":true,
            "type":"string",
            "inType":"text"

        },
        "lastMod":{ 
            "required":true,
            "type":"timestamp"
        },
        "tempObj":{
            "required":true,
            "type":"string",
            "editable":true,
            "inType":"textarea"
        }
    },
    "tempTypes":{
        "infrm":{
            "sprtType":["strategy","initiative","idea","solution","asset"]
        },
        "wrkflo":{
            "sprtType":["offering","framework","process","use_case","function","deployment"]
        },
        "timebox":{
            "sprtType":["milestone","annual","project","sprint"]
        },
        "actor":{
            "sprtType":["org","capability","department"]
        },
        "timebox":{
            "sprtType":["link to Sprint Board"]
        },
        "user":{
            "sprtType":["link to Sprint Board"]
        }
    },
    "tempGen":{
        "status":["not_started","in-progress","completed"]
    }
}
