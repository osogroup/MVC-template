{
    "timebox":{
        "docId":{
            "required":true,
            "value":"uuid",
            "autogen":true,
            "type":"string"
        },
        "id":{
            "required":true,
            "autogen":true,
            "type":"int"
        },
        "name":{
            "required":true,
            "type":"string"
        },
        "lastMod":{
            "required":true,
            "type":"timestamp"
        },
        "startDate":{
            "required":true,
            "type":"timestamp"
        },
        "endDate":{
            "required":true,
            "type":"timestamp"
        },
        "type":{
            "required":true,
            "type":"string",
            "opts":"tbTypes"
        },
        "sprtType":{
            "type":"string",
            "opts":"tbTypes.{type}.sprtType"
        },
        "srvType":{
            "type":"string",
            "opts":"tbTypes"
        },
        "infrmType":{
            "required":true,
            "type":"string",
            "opts":"tbTypes.{type}.infrmType"
        },
        "contInfrm":{
            "type":"object",
            "obj":{
                "{supInfrm.docId}":{
                    "docId":"{supInfrm.docId}",
                    "name":"{supInfrm.name}",
                    "infrmStatus":"{supInfrm.infrmStatus}"
                }
            },
            "opts":"_infrm-{tbTypes.{type}.infrmType}"
        },
        "tasks":{
            "type":"object",
            "obj":{
                "{task.docId}":{
                    "docId":"{task.docId}",
                    "name":"{task.name}",
                    "dueDate":"{task.dueDate}",
                    "descript":"{task.descript}"
                }
            }
        },
        "approver":{
            "type":"obj",
            "obj":{
                "{user.id}":{
                    "id":"{user.id}",
                    "name":"{user.name}",
                    "role":"{user.role}"
                }
            },
            "opts":"_users-{tbTypes.{type}.approverRole}"
        }
    },
    "tbTypes":{
        "milestone":{
            "sprtType":["annual"],
            "approverRole":[""],
            "infrmType":[""]
        },
        "annual":{
            "sprtType":["project"],
            "approverRole":[""],
            "infrmType":[""]
        },
        "project":{
            "sprtType":["sprint"],
            "approverRole":[""],
            "infrmType":[""]
        },
        "sprint":{
            "sprtType":["link to Sprint Board"],
            "approverRole":[""],
            "infrmType":[""]
        }
    }
}